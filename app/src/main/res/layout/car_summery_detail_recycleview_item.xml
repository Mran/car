<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/car_summery_detail_item_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奥迪A6L"
            android:textColor="@color/black"
            android:textSize="18sp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/car_summery_detail_item_car_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="厂商指导价:  25.98万" />

        <TextView
            android:id="@+id/car_summery_detail_item_car_price_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:text="22.98万起"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/car_series_detail_item_car_price_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/car_summery_detail_item_car_price_min"
            android:text="参考价:" />
    </RelativeLayout>
</LinearLayout>
