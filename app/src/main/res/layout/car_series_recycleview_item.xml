<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/car_detail_recycleview_item_car_img"
        android:layout_width="@dimen/x74"
        android:layout_height="@dimen/x64"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/car_detail_recycleview_item_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奥迪A6L"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/car_detail_recycleview_item_car_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="110.00万"
            android:textColor="#e7460b"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
