<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/car_search_brand_checked_item"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_21_interface_check_no_vote" />

    <ImageView
        android:id="@+id/car_search_brand_log_item"
        android:layout_width="@dimen/x32"
        android:layout_height="@dimen/x32"        android:layout_gravity="center"

        android:layout_marginLeft="20dp"
      />

    <TextView
        android:id="@+id/car_search_brand_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="奥迪" />
</LinearLayout>
